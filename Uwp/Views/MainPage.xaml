<Page
    x:Class="Marimo.MappingGames.Uwp.Views.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:i="using:Microsoft.Xaml.Interactivity"
    xmlns:ic="using:Microsoft.Xaml.Interactions.Core"
    xmlns:tk="using:Microsoft.Toolkit.Uwp.UI.Controls"
    xmlns:ctrl="using:Microsoft.UI.Xaml.Controls"
    xmlns:vm="using:Marimo.MappingGames.Uwp.ViewModels"
    Style="{StaticResource PageStyle}"
    xmlns:prismMvvm="using:Prism.Windows.Mvvm"
    prismMvvm:ViewModelLocator.AutoWireViewModel="True" 
    mc:Ignorable="d"
    >
    <Grid x:Name="ContentArea" Margin="{StaticResource MediumLeftRightMargin}">
        <Grid.RowDefinitions>
            <RowDefinition Height="48" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="20"></ColumnDefinition>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <TextBlock
            Grid.Row="0"
            x:Uid="Main_Title"
            Style="{StaticResource PageTitleStyle}" />
        <RelativePanel 
            Grid.Row="1"
            Grid.Column="0"
            Background="{ThemeResource SystemControlPageBackgroundChromeLowBrush}">
            <Button x:Name="クリップボードから貼り付け">
                <SymbolIcon Symbol="Paste"></SymbolIcon>
                <Button.KeyboardAccelerators>
                    <KeyboardAccelerator Key="V" Modifiers="Control"/>
                </Button.KeyboardAccelerators>
                <i:Interaction.Behaviors>
                    <ic:EventTriggerBehavior EventName="Click">
                        <ic:InvokeCommandAction Command="{Binding 画像を取り込むCommand}" />
                    </ic:EventTriggerBehavior>
                </i:Interaction.Behaviors>
            </Button>
            <ScrollViewer x:Name="元画像"
                RelativePanel.Below="クリップボードから貼り付け"
                RelativePanel.Above="元画像倍率"
                RelativePanel.AlignLeftWithPanel="True"
                RelativePanel.AlignRightWithPanel="True"
                VerticalScrollBarVisibility="Visible"
                HorizontalScrollBarVisibility="Visible">
                <Image
                    Width="{Binding 画像Size.Width}"
                    Height="{Binding 画像Size.Height}"
                    Source="{Binding 元画像}"/>
            </ScrollViewer>
            <TextBlock x:Name="倍率タイトル"
                       RelativePanel.Above="分割"
                RelativePanel.AlignLeftWithPanel="True"
                >元画像</TextBlock>
            <TextBlock x:Name="倍率テキスト"
                       RelativePanel.Above="分割"
                       RelativePanel.RightOf="倍率タイトル"
                       Text="{Binding 元画像倍率パーセント}"/>
            <Slider x:Name="元画像倍率"
                 RelativePanel.Above="分割"
                    RelativePanel.RightOf="倍率テキスト"
                    RelativePanel.AlignRightWithPanel="True"
                Maximum="2000"
                Orientation="Horizontal" Value="{Binding 元画像倍率パーセント, Mode=TwoWay}" />
            <Button x:Name="分割"
                RelativePanel.AlignHorizontalCenterWithPanel="True"
                    RelativePanel.AlignBottomWithPanel="True"
                    Command="{Binding 画像を分割するCommand}"
                >分割</Button>
        </RelativePanel>
        <tk:GridSplitter Grid.Column="1" Grid.Row="1" ResizeBehavior="BasedOnAlignment" ResizeDirection="Auto"/>
        <ScrollViewer
            Grid.Row="1"
            Grid.Column="2"
            >
            <ListView x:Name="分割画像"
                RelativePanel.Below="分割"
                          ItemsSource="{Binding 分割された画像}">
                <ListView.ItemsPanel>
                    <ItemsPanelTemplate>
                        <tk:WrapPanel></tk:WrapPanel>
                    </ItemsPanelTemplate>
                </ListView.ItemsPanel>
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Image Stretch="None" Margin="5" Source="{Binding}"/>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </ScrollViewer>
    </Grid>
</Page>
